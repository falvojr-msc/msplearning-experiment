<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_titulo"
        android:maxLength="50" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtUrlImagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_url_imagem"
        android:inputType="textUri"
        android:maxLength="255" />

    <EditText
        android:id="@+id/txtNotaRodape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_nota_rodape"
        android:maxLength="50" />

    <EditText
        android:id="@+id/txtPagina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_pagina"
        android:inputType="number"
        android:maxLength="18" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/action_salvar" />

</LinearLayout>