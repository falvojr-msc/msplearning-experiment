<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <EditText
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_txttitulo"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/txtUrlDoVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_urldovideo"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/txtNotaRodape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_notarodape"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:singleLine="true"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/txtPagina"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_txtpagina"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="number"  />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/action_salvar" />
    </LinearLayout>

</ScrollView>