<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="br.com.cast.android.exp.EducationalActivity" >

        <EditText
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_titulo"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/txtUrlImagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_url_imagem"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/txtNotaRodaPe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_nota_rodape"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/txtPagina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_pagina"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:singleLine="true" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_salvar" />
    </LinearLayout>

</ScrollView>